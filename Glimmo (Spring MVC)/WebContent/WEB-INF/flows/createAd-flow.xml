<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

 	<var name="newAdvertisement" class="be.glimmo.dto.AdvertisementTransferObject"/>
 	
 	<view-state id="createAd" view="createAd-step1" model="newAdvertisement" popup="true">
 		<!-- <transition on="go-to-step2" to="step2"/>  -->		
 		<transition on="go-to-step2" to="persistAd"/>
 	</view-state>
 	
 	<action-state id="persistAd">
 		<evaluate expression="advertisementService.persistAdvertisement(newAdvertisement) == true" />
 		<transition to="finish-step" />
 	</action-state>
 	
 	<view-state id="finish-step" view="createAd-finish"/>
 	
 <!-- 	<view-state id="step2" view="createAd-step2" model="newAdvertisement"></view-state> -->
 	
</flow>